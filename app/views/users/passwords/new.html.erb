<div class="container">
  <div class="row">
    <div class="col-md-5 mx-md-auto">
      <div class="card mt-5">
        <div class="card-header">
          <h4 class="text-center p-0 custom-text-color">Forgot your password?</h4>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="card-body">
            <div class="form-group float-label-control">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder:"Email" %>
            </div>
            <div class="actions">
              <%= f.submit "Send me reset password instructions", class: "btn btn-dark btn-block" %>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>


