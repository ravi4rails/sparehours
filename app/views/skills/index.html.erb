<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-md-6">
          <h1>Skills</h1>
        </div>
        <div class="col-md-6">
          <%= link_to 'Add New Skill', new_skill_path, class: 'btn btn-dark float-right mt-1' %>
        </div>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @skills.each do |skill| %>
            <tr>
              <td><%= skill.name %></td>
              <td><%= skill.description %></td>
              <td><%= link_to 'Show', skill %></td>
              <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
              <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
